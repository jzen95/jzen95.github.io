				    context="Comment 2"
				    char="/"
				    char1="*"
				    beginRegion="Comment" />

				<!-- Step boundaries (data/proc/run/quit) â€” highlighted as Step -->
				<RegExpr attribute="Step"
				    context="#stay"
				    String="(^|;)\s*\bdata\b"
				    insensitive="TRUE"
				    beginRegion="dataproc1" />
				<RegExpr attribute="Step"
				    context="#stay"
				    String="(^|;)\s*\bproc\b"
				    insensitive="TRUE"
				    beginRegion="dataproc1" />
				<RegExpr attribute="Step"
				    context="#stay"
				    String="(^|;)\s*\brun\b"
				    insensitive="TRUE"
				    endRegion="dataproc1" />
				<RegExpr attribute="Step"
				    context="#stay"
				    String="(^|;)\s*\bquit\b"
				    insensitive="TRUE"
				    endRegion="dataproc1" />
				<RegExpr attribute="Step"
				    context="#stay"
				    String="(^|;)\s*\brsubmit\b"
				    insensitive="TRUE" />
				<RegExpr attribute="Step"
				    context="#stay"
				    String="(^|;)\s*\bendrsubmit\b"
				    insensitive="TRUE" />

				<!-- Data step block: do ... end -->
				<RegExpr attribute="Control"
				    context="#stay"
				    String="\bdo\b"
				    insensitive="TRUE"
				    beginRegion="controlgroup" />
				<RegExpr attribute="Control"
				    context="#stay"
				    String="\bend\b"
				    insensitive="TRUE"
				    endRegion="controlgroup" />

				<!-- Macro definition blocks -->
				<keyword attribute="Macro"
				    context="Macroname"
				    String="macrodef"
				    beginRegion="macrodef" />
				<keyword attribute="Macro"
				    context="#stay"
				    String="macromend"
				    endRegion="macrodef" />
				<keyword attribute="Control"
				    context="#stay"
				    String="macrodo"
				    beginRegion="controlgroup2" />
				<keyword attribute="Control"
				    context="#stay"
				    String="macroend"
				    endRegion="controlgroup2" />

				<!-- Macro statements -->
				<keyword attribute="Macro"
				    context="#stay"
				    String="macros" />

				<!-- Keywords -->
				<keyword attribute="Keywords"
				    context="#stay"
				    String="keywords" />

				<!-- Controls (if/then/else) -->
				<keyword attribute="Control"
				    context="#stay"
				    String="controls" />

				<!-- SQL keywords -->
				<keyword attribute="Keywords"
				    context="#stay"
				    String="sqlkeywords" />

				<!-- Procedure names -->
				<keyword attribute="Procs"
				    context="#stay"
				    String="procs" />

				<!-- Functions -->
				<keyword attribute="Functions"
				    context="#stay"
				    String="functions" />

				<!-- Constants -->
				<keyword attribute="Constants"
				    context="#stay"
				    String="constants" />

				<!-- Strings -->
				<DetectChar attribute="String"
				    context="string"
				    char="&quot;" />
				<DetectChar attribute="String"
				    context="string2"
				    char="'" />

				<!-- Numbers -->
				<Float attribute="Number"
				    context="#stay" />
				<Int attribute="Number"
				    context="#stay" />

				<!-- Macro variable references: &var or &var. -->
				<DetectChar attribute="MacroVar"
				    context="Mvar"
				    char="&amp;" />

				<!-- Macro call: %name -->
				<DetectChar attribute="Macro"
				    context="Macroname"
				    char="%" />

				<!-- Formats like date9. dollar12.2 -->
				<RegExpr attribute="Format"
				    context="#stay"
				    String="\b\w+\d+\.\d*\b"
				    insensitive="TRUE" />
			</context>

			<!-- Macro name context -->
			<context attribute="Macro"
			    lineEndContext="#pop"
			    name="Macroname">
				<DetectChar attribute="Macro"
				    context="#pop"
				    char=";" />
				<DetectChar attribute="Normal Text"
				    context="#pop"
				    char=" " lookAhead="true" />
			</context>

			<!-- SAS line comment (*...;) -->
			<context attribute="Comment"
			    lineEndContext="#stay"
			    name="Comment 1">
				<DetectChar attribute="Comment"
				    context="#pop"
				    char=";"
				    endRegion="Comment" />
			</context>

			<!-- Block comment (/* ... */) -->
			<context attribute="Comment"
			    lineEndContext="#stay"
			    name="Comment 2">
				<Detect2Chars attribute="Comment"
				    context="#pop"
				    char="*"
				    char1="/"
				    endRegion="Comment" />
			</context>

			<!-- Double-quoted string (allows &macro_var inside) -->
			<context attribute="String"
			    lineEndContext="#pop"
			    name="string">
				<DetectChar attribute="MacroVar"
				    context="Mvar"
				    char="&amp;" />
				<DetectChar attribute="String"
				    context="#pop"
				    char="&quot;" />
			</context>

			<!-- Single-quoted string -->
			<context attribute="String"
			    lineEndContext="#pop"
			    name="string2">
				<DetectChar attribute="String"
				    context="#pop"
				    char="'" />
			</context>

			<!-- Macro variable: &name or &name. -->
			<context attribute="MacroVar"
			    lineEndContext="#pop"
			    name="Mvar">
				<DetectChar attribute="MacroVar"
				    context="#pop"
				    char="." />
				<RegExpr attribute="MacroVar"
				    context="#pop"
				    String="[^\w]" lookAhead="true" />
			</context>

			<!-- Datalines/cards -->
			<context attribute="Cards"
			    lineEndContext="#stay"
			    name="Cards">
				<RegExpr
				    attribute="Cards"
				    context="#pop"
				    String="^\s*;\s*$"
				    endRegion="Cards" />
			</context>
		</contexts>

		<itemDatas>
			<itemData name="Normal Text"
			    defStyleNum="dsNormal" />
			<itemData name="Keywords"
			    defStyleNum="dsKeyword" />
			<itemData name="Functions"
			    defStyleNum="dsFunction" />
			<itemData name="Constants"
			    defStyleNum="dsConstant" />
			<itemData name="Macro"
			    defStyleNum="dsPreprocessor" />
			<itemData name="MacroVar"
			    defStyleNum="dsVariable" />
			<itemData name="Control"
			    defStyleNum="dsControlFlow" />
			<itemData name="Step"
			    defStyleNum="dsBuiltIn" />
			<itemData name="Procs"
			    defStyleNum="dsAttribute" />
			<itemData name="Comment"
			    defStyleNum="dsComment" />
			<itemData name="String"
			    defStyleNum="dsString" />
			<itemData name="Number"
			    defStyleNum="dsDecVal" />
			<itemData name="Format"
			    defStyleNum="dsSpecialChar" />
			<itemData name="Cards"
			    defStyleNum="dsVerbatimString" />
		</itemDatas>
	</highlighting>
	<general>
		<comments>
			<comment name="multiLine"
			    start="/*"
			    end="*/"
			    Region="Comment" />
		</comments>
		<keywords casesensitive="0"
		    weakDeliminator="%" />
	</general>
</language>
